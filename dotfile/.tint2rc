#---------------------------------------------
# TINT2 CONFIG FILE
# manpage http://code.google.com/p/tint2/wiki/Configure
#---------------------------------------------

#---------------------------------------------
# BACKGROUND AND BORDER
#---------------------------------------------
# ID 1
rounded = 0
border_width = 0
background_color = #000000 50
border_color = #eeeeee 50

# ID 2
rounded = 0
border_width = 0
background_color = #8ED2E8 50
border_color = #eeeeee 50

#---------------------------------------------
# PANEL
#---------------------------------------------
panel_monitor = all
panel_position = top center horizontal
panel_size = 98% 25
panel_margin = 0 0
panel_padding = 0 0 1
font_shadow = 0
panel_background_id = 0
wm_menu = 0
panel_dock = 0
panel_layer = top

#---------------------------------------------
# TASKBAR
#---------------------------------------------
taskbar_mode = single_desktop
taskbar_padding = 0 0 1
taskbar_background_id = 0
#taskbar_active_background_id = 0

#---------------------------------------------
# TASKS
#---------------------------------------------
urgent_nb_of_blink = 5
task_icon = 0
task_text = 1
task_centered = 1
task_maximum_size = 150 25
task_padding = 2 2
task_font = 文泉驿微米黑 10
task_font_color = #eeeeee 100
#task_icon_asb = 80 -30 -30
task_background_id = 1
task_active_font_color = #eeeeee 100
#task_active_icon_asb = 80 30 30
task_active_background_id = 2
task_tooltip = 1

#---------------------------------------------
# SYSTRAYBAR
#---------------------------------------------
systray = 1
systray_padding = 2 0 2
systray_background_id = 1
systray_sort = ascending
systray_icon_size = 0
#systray_icon_asb = 80 0 0

#---------------------------------------------
# CLOCK
#---------------------------------------------
time1_format = %T
time1_timezone = :Asia/Shanghai
time1_font = 文泉驿微米黑 10
time2_format = %F
time2_timezone = :Asia/Shanghai
time2_font = 文泉驿微米黑 10
clock_font_color = #eeeeee 100
clock_padding = 2 2
clock_background_id = 1
clock_tooltip = %A %B
clock_tooltip_timezone = :Asia/Shanghai
#clock_lclick_command = xclock
#clock_rclick_command = orage

#---------------------------------------------
# TOOLTIP
#---------------------------------------------
tooltip = 1
tooltip_padding = 2 2
tooltip_show_timeout = 0.7
tooltip_hide_timeout = 0.3
tooltip_background_id = 1
tooltip_font_color = #eeeeee 100
tooltip_font = 文泉驿微米黑 10

#---------------------------------------------
# BATTERY
#---------------------------------------------
battery = 1
battery_hide = 95
battery_low_status = 10
battery_low_cmd = notify-send "battery low"
bat1_font = 文泉驿微米黑 10
bat2_font = 文泉驿微米黑 10
battery_font_color = #eeeeee 100
battery_padding = 2 2
battery_background_id = 1

#---------------------------------------------
# MOUSE ACTION ON TASK
#---------------------------------------------
mouse_middle = none
mouse_right = none
mouse_scroll_up = toggle
mouse_scroll_down = iconify

#---------------------------------------------
# AUTOHIDE OPTIONS
#---------------------------------------------
autohide = 0
#autohide_show_timeout = 0.5
#autohide_hide_timeout = 2
#autohide_height = 5
#strut_policy = minimum
